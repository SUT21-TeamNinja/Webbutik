@model IEnumerable<Movie>

@{
    ViewData["Title"] = "TopTenMovies";
}

<div class="container">
	<h1>Top 10 Movies</h1>

	@foreach (var item in Model)
	{
		<div class="row">
			<div class="col-md-2">
				<img src="@item.ImageUrl" class="img-fluid rounded-start" alt="<BILD SAKNAS>" style="height: 200px;">
			</div>

			<div class="col-md-8">
				<h3>@item.Title</h3>
				<p>@item.Description</p>
			</div>
			
		</div>
		<hr />
	}
</div>


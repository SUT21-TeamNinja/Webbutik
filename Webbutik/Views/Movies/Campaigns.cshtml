@model IEnumerable<Movie>

@{
    ViewData["Title"] = "Deals";
}

<div class="container">
    <h2 class="header">Movies On Sale</h2>

    <div class="row" style="justify-content: flex-start">
        @foreach (var item in Model)
        {
            @if (DateTime.Compare(Convert.ToDateTime(item.DiscountStart), DateTime.Now) < 0)
            {
                <partial name="Components//_MovieCard" model="item" />

                <div class="modal" id="exampleModal" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">

                            <partial name="Components//_MovieDetails" model="item" />
                        </div>
                    </div>
                </div>
            }            
        }
    </div>
</div>

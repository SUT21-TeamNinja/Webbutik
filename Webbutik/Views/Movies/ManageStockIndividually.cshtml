@model Movie

@{
    ViewData["Title"] = "ManageStockIndividually";
}
<div id="adm-container">
    <div class="wrapper">

        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>Admin Page
                    <hr/>
            </div>
            <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" style="color:white;"><i class="fa-solid fa-user-gear"></i> Manage Account</a>
            <hr /> 

            <ul class="list-unstyled components">
                <li>
                    <a asp-action="ManageProducts">Manage Products</a> 
                </li>
                <li>
                    <a asp-action="ManageStock">Manage Stock</a>
                </li>
                <li>
                    <a asp-action="ManageCampaigns">Manage Campaigns</a>
                </li>
                <li>
                    <a asp-action="Dashboard">Statistic Dashboard</a>
                </li>
                <li>
                    <a asp-action="PurchaseLog" >Customer purchase log</a>
                </li>
                <li>
                    <a asp-action="Currency" >Currency</a>
                </li>
            </ul>

            <div style="color: white;">
                <hr />                

                <form id="logoutForm" class="form-inline" asp-area="Identity"
                    asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" class="btn btn-outline-light" type="submit"><i class="fa-solid fa-right-from-bracket"></i> Logout</button>
                </form>
            </div>

        </nav>
        <div id="content-sidebar">

    <div class="card" style="width: 15rem; height:20rem;">
                <img src="@Model.ImageUrl" class="img-thumbnail" alt="Movie cover">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">@Model.Description</p>

        <div class="group-inline">
        
        <a asp-controller="Movies" asp-action="DecreaseInStock" asp-route-id="@Model.Id">
            <i class="btn btn-danger d-inline-block">-</i>
        </a>
                    <p class="d-inline-block">Number in stock: @Model.InStock</p>

        <a asp-controller="Movies" asp-action="IncreaseInStock" asp-route-id="@Model.Id">
                        <i class="btn btn-primary">+</i>
        </a>
        </div>
    </div>
</div>

    </div>
    </div>
    </div>
@model Movie


<div class="col-sm-3">
    <div class="card mb-5" style="width: 13rem; height: 19.5rem">

        <img class="card-img-top" src="@Model.ImageUrl" alt="<IMAGE MISSING>" style="width: 7rem; height: 10rem; transform:translateX(1rem)">

        <div class="card-body">
            <h5 class="card-title" style="width: 10rem; font-size:small">@Model.Title</h5>

            <p class="card-text"> @await Component.InvokeAsync("DiscountPrice", new { id = Model.Id })</p>
        </div>

        <div class="card-footer">
            <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Id">
                <div class="btn btn-success">
                    PURCHASE
                </div>
            </a>
        </div>

    </div>
</div>